            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="#AAAAAA" />

            <TextView
                android:id="@+id/fifa4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#0489B1"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:text="피파4"
                android:textSize="25dp" />


            <TextView
                android:id="@+id/fifa4_game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fifa4"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="경기"
                android:textSize="20dp"></TextView>


            <CheckBox
                android:id="@+id/check_gon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fifa4_game"
                android:layout_marginTop="10dp"
                android:text="공식경기"
                android:textSize="15dp" />

            <CheckBox
                android:id="@+id/check_chi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fifa4_game"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/check_gon"
                android:text="친선경기"
                android:textSize="15dp" />


            <CheckBox
                android:id="@+id/check_onebyone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fifa4_game"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/check_chi"
                android:text="1vs1"
                android:textSize="15dp" />

            <CheckBox
                android:id="@+id/check_twobytwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fifa4_game"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/check_onebyone"
                android:text="2vs2"
                android:textSize="15dp" />

            <CheckBox
                android:id="@+id/check_bol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fifa4_game"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/check_twobytwo"
                android:text="볼타"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/fifa4_tier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/check_gon"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="티어"
                android:textSize="20dp"></TextView>


            <Spinner
                android:id="@+id/fifa4_tiers"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_below="@id/check_gon"
                android:layout_toRightOf="@+id/fifa4_tier"
                android:entries="@array/fifa4">

            </Spinner>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hidden6">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="#AAAAAA" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#0489B1"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:text="카트라이더"
